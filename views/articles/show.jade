extends ../layout

block content

    h1= title

    while message = flash.shift()
        div(class='alert alert-#{message.type}')= message.message

    div= article.content
    br
    p
        a.btn.btn-default#articleEdit(href='/articles/' + article.id + '/edit') Edit article
        a.btn.btn-danger#articleDelete(href='/articles/' + article.id) Delete article

block append scripts
    script(src='/js/articles/ajaxButtons.js')